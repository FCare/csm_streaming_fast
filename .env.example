# Configuration Hugging Face (requis pour accéder aux modèles CSM-1B et Llama-3.2-1B)
HF_TOKEN=your_hugging_face_token_here
HF_HOME=/home/csm/.cache/huggingface

# Configuration PyTorch/CUDA
TORCH_HOME=/home/csm/.cache/torch
CUDA_VISIBLE_DEVICES=0

# Configuration de l'application
LOG_LEVEL=INFO
DEBUG=false

# Base de données (optionnel - utilisé pour le système RAG)
DATABASE_URL=sqlite:///./config/csm.db

# Configuration audio (optionnel)
PULSE_RUNTIME_PATH=/tmp/pulse-runtime